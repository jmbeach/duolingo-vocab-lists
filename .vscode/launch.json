  "version": "0.2.0",
  "configurations": [
    {
      "name": "(en-es) combine",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "runtimeArgs": ["--inspect"],
      "args": ["lib/index.js", "combine", "-p", "english-spanish/"],
      "console": "integratedTerminal"
    },
    {
      "name": "(en-es) create",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "runtimeArgs": ["--inspect"],
      "args": [
        "lib/index.js",
        "create",
        "-f",
        "english-spanish/english-spanish.json"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "(en-es) download",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "runtimeArgs": ["--inspect-brk"],
      "args": [
        "lib/index.js",
        "download",
        "-s",
        "english-spanish/raw-course-data.json",
        "-f",
        "english-spanish/vocab.html"
      ],
      "console": "integratedTerminal"
    }
  ]
}
